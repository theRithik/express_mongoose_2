<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Products</title>
    </head>
    <body>
        <h1>Product EJS</h1>
        <h1><%= from1 %></h1>
        <form form action="products/addProduct" method="POST">
            <div>
                <label for="productName">Product Name</label>
                <input type ="text" id="productName" name="productName" value="" placeholder="enter any product name">
               <br/>
                <label for="productPrice">Product Price</label>
                <input type ="text" id="productPrice" name="productPrice" value="" placeholder="enter any product Price">
            <br/>
                <label for="productDescription">Product Description</label>
                <input type ="text" id="productDescription" name="productDescription" value="" placeholder="enter any Product Description">
            <br/>
            <button type="submit">Submit</button>
            </div>
        </form>
        <hr/>
        
        <table>
            <thead>
                <tr>
                    <th>Product name</th>
                    <th>Product price</th>
                    <th>Product Description</th>
        
                </tr>
            </thead>
            <tbody>
                <% for (var i=0; i<productsData.length;i++){%>
                    <tr>
                        <td><%= productsData[i].productName %></td>
                        <td><%= productsData[i].productPrice %></td>
                        <td><%= productsData[i].productDescription %></td>
                    </tr>
                <% } %>   
            </tbody>
           
            
        </table>
    </body>
</html>